<UserControl
    x:Class="Hotel_Management_System.Views.ReservationListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hotel_Management_System.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="48" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="List of reservations" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Text="Sort by:" />
            <ComboBox Margin="0,0,12,0" />
            <Button Command="{Binding SortCommand}" Content="Sort" />
        </StackPanel>
        <ListView Grid.Row="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="30"
                        DisplayMemberBinding="{Binding ID}"
                        Header="ID" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding RoomNum}"
                        Header="Room number" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding FloorNum}"
                        Header="Floor number" />
                    <GridViewColumn
                        Width="70"
                        DisplayMemberBinding="{Binding FirstName}"
                        Header="First name" />
                    <GridViewColumn
                        Width="70"
                        DisplayMemberBinding="{Binding LastName}"
                        Header="Last name" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding ReservationDate}"
                        Header="Reservation date" />
                    <GridViewColumn
                        Width="70"
                        DisplayMemberBinding="{Binding StartDate}"
                        Header="Start date" />
                    <GridViewColumn
                        Width="70"
                        DisplayMemberBinding="{Binding EndDate}"
                        Header="End date" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
